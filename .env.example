# These are defaults for local development.
# In production, these should be set via CI/CD secrets.

# MySQL
MYSQL_ROOT_PASSWORD=root_password
MYSQL_DATABASE=factoryops
MYSQL_USER=factoryops_user
MYSQL_PASSWORD=factoryops_password

# InfluxDB
DOCKER_INFLUXDB_INIT_ORG=factoryops
DOCKER_INFLUXDB_INIT_BUCKET=factoryops
DOCKER_INFLUXDB_INIT_ADMIN_TOKEN=factoryops_admin_token

# MinIO
MINIO_ROOT_USER=minio_access_key
MINIO_ROOT_PASSWORD=minio_secret_key

# EMQX
EMQX_DASHBOARD_DEFAULT_USER=admin
EMQX_DASHBOARD_DEFAULT_PASSWORD=public

# Service Ports
PORT_API=8000
PORT_TELEMETRY=8001
PORT_RULE_ENGINE=8002
PORT_ANALYTICS=8003
PORT_REPORTING=8004
PORT_NOTIFICATION=8005
